<%- include('layout/header')  %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message){ %>
                <div class="alert alert-dismissible fade show alert <%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert"aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
              <%  if(users != '') { %>
                <table class="table table-striped text-right my-4 ">
                    <thead>
                        <tr class="table table-dark">
                            <th>ID</th>
                          
                            <th>Emp_NAME</th>
                            <th>Emp_Department</th>
                            <th>Emp_Designation</th>
                            <th>Emp_EMAIL</th>
                            <th>Emp_Phone_Number</th>
                          
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% users.forEach((row,index)=>{ %>
                    <tr class="align-middle">
                        <td><%= index %></td>
                       
                        <td><%= row.name %></td>
                        <td><%= row.departMent %></td>
                        <td><%= row.desigantion %></td>
                        <td><%= row.email %></td>
                        <td><%= row.phone %></td>
                     
                        <td>
                           
                            <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                            
                            <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                    </tr>
                     <% }) %>
                  
                    </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">no users found in the database!</h1>
              <% } %>
            </div>
            
        </div>
    </div>
</div>

<%- include('layout/footer') %>
